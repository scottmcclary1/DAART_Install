(On MacBook)
$ source ENV2/bin/active
$ pip install ansible

(On Karst)
$ module load python
$ virtualenv venv
$ source venv/bin/active
$ pip install ansible
ansible all -m ping -u scmcclar (specify user..)

$ cat /etc/ansible/hosts
[targets]

localhost ansible_connection=local ansible_user=scottmcclary
karst.uits.iu.edu ansible_user=scmcclar
bigred2.uits.iu.edu ansible_user=scmcclar


$ ansible all -m ping
localhost | SUCCESS => {
    "changed": false, 
    "ping": "pong"
}
karst.uits.iu.edu | SUCCESS => {
    "changed": false, 
    "ping": "pong"
}
bigred2.uits.iu.edu | SUCCESS => {
    "changed": false, 
    "ping": "pong"
}

$ ansible all -a "/bin/echo hello"
localhost | SUCCESS | rc=0 >>
hello

karst.uits.iu.edu | SUCCESS | rc=0 >>
hello

bigred2.uits.iu.edu | SUCCESS | rc=0 >>
hello

$ ansible local -a "/bin/echo hello"
$ ansible remote -a "/bin/echo hello"

$ ansible remote -m git -a "repo=git@github.com:IUSCA/DAART.git dest=~/DAART accept_hostkey=yes version=HEAD" -f 2
